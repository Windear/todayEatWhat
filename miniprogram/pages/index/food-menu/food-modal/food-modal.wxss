.detail-container {
  background: #fff;
  overflow: hidden;
  top: 40px;
  left: 0px;
  right: 0px;
  width: 235px;
  height: 360px;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  z-index: 2000;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

/* 遮罩层 */

.modalMask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.3; /*背景透明度*/
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

/* 遮罩层 */

.dis_btn {
  background: linear-gradient(to bottom right, rgba(131, 131, 131, 1), rgba(220, 220, 220, 1));
  box-shadow: 0 2px 10px rgba(192, 192, 192, 0.5);
}

.close_icon {
  top: 460px;
  left: 0px;
  right: 0px;
  width: 40px;
  height: 40px;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  z-index: 3000;
}

.list-title {
  height: 24px;
  border-bottom: 1rpx solid #eff2f7;
  font-size: 14px;
  color: #5e6d82;
  letter-spacing: 0;
}

.list-content {
  display: flex;
  justify-content: space-between;
  height: 40px;
}

.food-title {
  font-size: 14px;
  color: #1f2d3d;
  letter-spacing: 0;
}

.food-list-num {
  font-size: 14px;
  color: #8492a6;
  letter-spacing: 0;
  text-align: right;
}
