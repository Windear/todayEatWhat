.share-box {
  background: #fff;
  /* height: 116px; */
  position: fixed;
  z-index: 10000;
  bottom: 0;
  width: 100%;
  text-align: center;
}

.share-title {
  font-size: 12px;
  color: #1f2d3d;
  letter-spacing: 0;
}

.share-btn-box {
  display: flex;
}

.img-btn-icon {
  width: 40px;
  height: 40px;
  margin: 8px auto 5px;
}

.share {
  text-align: center;
  font-size: 12px;
  color: #1f2d3d;
  letter-spacing: 0;
  width: 50%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 10px;
  background-color:#fff;
}

.share::after {
  border: 0;
}

.canvas-box{
  width:260px;
  height:393px;
  z-index: 9999;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: 40px auto 0;
}

.canvas-box image{
   width:100%;
  height:100%;
  
}

.canvas-boxes{
  position: fixed;
  bottom: 99999px;
}
