.detail-container {
  background: #fff;
  overflow: hidden;
  top: 60px;
  left: 0px;
  right: 0px;
  width: 275px;
  height: 400px;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  z-index: 2000;
  border-radius: 4px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.food_detail_box {
  position: relative;
  width: 80px;
  height: 80px;
  margin-top: 20px;
}

.food_detail_img {
  width: 80px;
  height: 80px;
  background: #eff2f7;
  border-radius: 50%;
}

.food_detail_title {
  color: #1f2d3d;
  font-size: 14px;
  margin-top: 10px;
  width: 235px;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break:break-all;
}

.food_detail_search {
  background: #eff2f7;
  height: 32px;
  margin: 0 20px;
  margin-top: 20px;
  border-radius: 16px;
  padding-left: 12%;
  display: flex;
  align-items: center;
}

.food_detail_search icon{
  margin-right: 20px;
}

.select_cate_box {
  background: #eff2f7;
  height: 32px;
  margin: 0 20px;
  margin-top: 12px;
  border-radius: 16px;
  width: 235px;
  display: flex;
}

.select_cate_box view {
  width: 50px;
  color: #5e6d82;
  font-size: 14px;
  text-align: center;
  line-height: 32px;
  border-radius: 16px;
}

.main_food_select {
  background: linear-gradient(to bottom right, rgba(255, 108, 58, 1), rgba(255, 182, 156, 1))!important;
  color: #fff !important;
}

.vegetable_food_select {
  background: linear-gradient(to bottom right, rgba(37, 170, 84, 1), rgba(154, 217, 129, 1)) !important;
  color: #fff !important;
}

.cold_food_select {
  background: linear-gradient(to bottom right, rgba(32, 160, 255, 1), rgba(144, 208, 255, 1)) !important;
  color: #fff !important;
}

.sweet_food_select {
  background: linear-gradient(to bottom right, rgba(245, 81, 95, 1), rgba(255, 174, 186, 1)) !important;
  color: #fff !important;
}

.soup_food_select {
  background: linear-gradient(to bottom right, rgba(184, 109, 35, 1), rgba(220, 173, 150, 1)) !important;
  color: #fff !important;
}

.select_none{
  display: none;
}

.fixed_food {
  display: flex;
  align-items: center;
}

.fixed_food text {
  color: #99a9bf;
  font-size: 14px;
}

.other_btn{
  display: flex;
  justify-content: space-between;
  width: 235px;
  margin-top: 10px;
}

.select_box {
  border: 1px solid #99a9bf;
  border-radius: 2px;
  width: 16px;
  height: 16px;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 5px;
}

.delete_food{
  color: #FF4949;
  font-size: 14px;
}

.modal_btn{
  display: flex;
  width: 235px;
  justify-content: space-between;
  margin-top: 20px;
  color: #fff;
  font-size: 16px;
}

.red_btn{
  background: linear-gradient(to bottom right, rgba(245, 81, 95, 1), rgba(255, 174, 186, 1));
  height: 40px;
  width: 110px;
  border-radius: 20px;
  line-height: 40px;
  text-align: center;
  box-shadow: 0 2px 10px rgba(255, 164, 164, 0.5);
}

.blue_btn {
  background: linear-gradient(to bottom right, rgba(0, 108, 255, 1), rgba(32, 190, 255, 1));
  height: 40px;
  width: 110px;
  border-radius: 20px;
  line-height: 40px;
  text-align: center;
  box-shadow: 0 2px 10px rgba(29, 182, 255, 0.5);
}

.dis_btn{
  background: linear-gradient(to bottom right, rgba(131, 131, 131, 1), rgba(220, 220, 220, 1));
  box-shadow: 0 2px 10px rgba(192, 192, 192, 0.5);
}

.close_icon {
  top: 480px;
  left: 0px;
  right: 0px;
  width: 40px;
  height: 40px;
  margin-left: auto;
  margin-right: auto;
  position: fixed;
  z-index: 3000;
}

.touchDetails{
  border:1px solid  rgba(245, 81, 95, 1);
  height: 36px;
  width: 160px;
  border-radius: 20px;
  line-height: 36px;
  text-align: center;
  box-shadow: 0 2px 10px rgba(255, 164, 164, 0.5);
  margin-top: 10px;
  color: rgba(245, 81, 95, 1);
  font-size: 16px;
}
