/* pages/index/waimai/waimai-detail/waimai-detail.wxss */

.shop-top {
  background: #fff;
  box-shadow: inset 0 -1rpx 0 0 #eff2f7;
  display: flex;
  padding: 10px;
}

.shop-img {
  min-height: 120px;
  min-width: 120px;
  height: 120px;
  width: 120px;
  border-radius: 4px;
  margin-right: 10px;
  box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.30);
}

.shop-content {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.shop-name {
  font-family: PingFangSC-Medium;
  font-size: 20px;
  color: #1f2d3d;
  letter-spacing: 0;
}

.shop-star {
  display: flex;
  align-items: center;
   height: 20px;
}

.star-box {
  max-height: 20px;
  max-width: 100px;
}

.star-box image {
  height: 20px;
  width: 100px;
  position: relative;
  z-index: 2;
  margin: 0;
  padding: 0;
  display:block;
}

.star-width {
  height: 20px;
  width: 100%;
  background: #f8bd1c;
  position: relative;
  top:-20px;
  z-index: 1;
}
.star-width-bg {
  height: 20px;
  width: 100%;
  background: #e1e9f7;
  position: relative;
  top:-40px;
  z-index: 0;
}

.star-num {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #ff4949;
  letter-spacing: 0;
  margin-left: 5px;
}

.shop-time {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #8492a6;
  letter-spacing: 0;
}

.distance {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #20a0ff;
  letter-spacing: 0;
}

.waimai-btn {
  background-image: linear-gradient(-135deg, #61b4fa 0%, #133bff 100%);
  box-shadow: 0 2px 4px 0 rgba(18, 25, 181, 0.30);
  border-radius: 16px 0 0 16px;
  font-family: PingFangSC-Medium;
  font-size: 14px;
  color: #fff;
  letter-spacing: 0;
  padding: 6px 10px 6px 20px;
  position: absolute;
  right: 0;
  top: 98px;
  opacity: 0.9;
}

.shop-add {
  background: #fff;
  min-height: 44px;
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #1f2d3d;
  letter-spacing: 0;
  display: flex;
  padding: 0 10px;
  align-items: center;
  box-shadow: inset 0 -1rpx 0 0 #eff2f7;
}

.shop-add image {
  min-height: 12px;
  min-width: 10px;
  height: 12px;
  width: 10px;
  margin-right: 10px;
}

.title {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #8492a6;
  letter-spacing: 0;
  margin: 10px 0 5px 10px;
}
