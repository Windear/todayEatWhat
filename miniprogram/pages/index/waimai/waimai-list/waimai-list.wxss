.search_box {
  display: flex;
  height: 48px;
  background: #fff;
  align-items: center;
  padding: 0 20px;
}

.search_box text {
  font-family: PingFangSC-Regular;
  font-size: 16px;
  color: #ff4949;
  letter-spacing: 0;
  width: 44px;
  text-align: right;
}

.delete_img {
  width: 16px;
  height: 16px;
  margin-right: 20px;
}

.search_box input {
  width: 100%;
}

.placeholder_search {
  font-family: PingFangSC-Light;
  font-size: 16px;
  color: #99a9bf;
  letter-spacing: 0;
}

.search_list {
  background: #fff;
  box-shadow: 0 1rpx 0 rgba(239, 242, 247, 1);
  display: flex;
  padding: 10px 20px;
}

.list_img {
  width: 120px;
  min-width: 120px;
  height: 98px;
  border-radius: 4px;
  background: #d3dce6;
  margin-right: 20px;
}

.list_title {
  font-family: SFProText-Medium;
  font-size: 20px;
  color: #1f2d3d;
  letter-spacing: 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.list_tags {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #8492a6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;
}

.list_btn {
  font-family: PingFangSC-Regular;
  font-size: 14px;
  color: #ff4949;
  letter-spacing: 0;
  border: 1px solid #ff4949;
  border-radius: 12px;
  width: 60px;
  height: 24px;
  text-align: center;
  line-height: 24px;
  align-self: flex-end;
}

.list_content {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.list_content text {
  margin-bottom: 5px;
}

.body-view {
  height: 40px;
  width: 100%;
  text-align: center;
  line-height: 40px;
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #8492a6;
  letter-spacing: 0;
}

.list_distance {
  font-family: PingFangSC-Regular;
  font-size: 12px;
  color: #FF435A;
  letter-spacing: 0;
  display: flex;
  align-items: center;
}

.list_distance image {
  min-height: 12px;
  min-width: 10px;
  height: 12px;
  width: 10px;
  margin-right: 10px;
}
