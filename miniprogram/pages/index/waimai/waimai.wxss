/* 页面背景CSS设置 */

page {
  background: #fff;
}

.waimai-bg {
  width: 100%;
  height: 100%;
  bottom: 0;
  position: absolute;
  overflow: hidden;
  z-index: -101;
}

.float-img {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  z-index: -99;
  -webkit-animation: 2s right-left linear infinite normal;
  animation: 2s right-left linear infinite normal;
}

.bg-img {
  width: 100%;
  height: 100%;
  position: absolute;
  overflow: hidden;
  z-index: -100;
}

@keyframes right-left {
  0% {
    -webkit-transform: translate3d(-5px, 0, 0);
    transform: translate3d(-5px, 0, 0);
  }

  50% {
    -webkit-transform: translate3d(5px, 0, 0);
    transform: translate3d(5px, 0, 0);
  }

  100% {
    -webkit-transform: translate3d(-5px, 0, 0);
    transform: translate3d(-5px, 0, 0);
  }
}

/* 页面背景CSS设置 */

/* 顶部 */

.page-head {
  height: 60px;
  width: 100%;
  position: fixed;
  top: 0;
}

.more-btn {
  margin-top: 14px;
  float: right;
  z-index: 3;
  color: #fff;
  background-image: linear-gradient(-134deg, #9031fe 0%, #a76dd7 100%);
  box-shadow: 0 2px 4px 0 rgba(139, 36, 172, 0.30);
  font-size: 14px;
  border-radius: 16px 0 0 16px;
  padding: 5px 12px 5px 20px;
}

.mask {
  background-image: linear-gradient(-180deg, rgba(255, 255, 255, 0.00) 0%, rgba(255, 255, 255, 0.50) 100%);
  width: 100%;
  height: 100%;
  z-index: 2;
  position: absolute;
}

.today {
  float: left;
  font-family: PingFangSC-Semibold;
  font-size: 24px;
  color: #9db9df;
  letter-spacing: 1.6px;
  margin-left: 20px;
  z-index: 1;
  margin-top: 12px;
}

