/* 店铺框 */

.shop {
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.shop image {
  margin-top: 30px;
  width: 180px;
  height: 180px;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 0 4px 16px 0 rgba(0, 0, 0, 0.30);
}

.shop  text {
  font-family: PingFangSC-Medium;
  font-size: 24px;
  color: #1f2d3d;
  letter-spacing: 0;
  text-align: center;
  margin-top: 20px;
}

