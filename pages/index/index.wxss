/**index.wxss**/
@import "modal/modal.wxss";

/* 滚动背景 */

.index_bg {
  position: absolute;
  top: 110rpx;
  left: 5%;
  z-index: -100;
  overflow: hidden;
  height: 90%;
  width: 90%;
}

.bg_img {
  margin-top: 80rpx;
  height: 100%;
  width: 100%;
  -webkit-animation: 20s rowup linear infinite normal;
  animation: 20s rowup linear infinite normal;
}

@keyframes rowup {
  0% {
    -webkit-transform: translate3d(0, 0, 0);
    transform: translate3d(0, 0, 0);
  }

  100% {
    -webkit-transform: translate3d(0, -1180rpx, 0);
    transform: translate3d(0, -1180rpx, 0);
  }
}

/* 滚动背景 */

.main_box {
  margin: 20px auto;
}

.eat_text {
  font-size: 16px;
  color: #1f2d3d;
  margin-left: 15px;
}

.select_num {
  display: flex;
  justify-content: space-between;
  /* margin-top: 20px; */
  margin: 30px auto 0;
  padding: 0 10px;
  min-width: 300px; 
   width: 315px; 
}

.select_num text {
  font-size: 14px;
  color: #5e6d82;
  width: 60px;
  height: 32px;
  line-height: 32px;
  display: inline-block;
  text-align: center;
}

.action {
  color: #fff !important;
  background: linear-gradient(to bottom right, rgba(245, 81, 95, 1), rgba(255, 174, 186, 1));
  border-radius: 16px;
}

.select_left_box {
  background: #e0e6ed;
  height: 32px;
  width: 240px;
  border-radius: 16px;
}

.select_right_box {
  background: #e0e6ed;
  height: 32px;
  width: 60px;
  border-radius: 16px;
}

.eat_list {
   min-width: 300px; 
   width: 315px;
  display: flex;
  margin: 30px auto;
  padding-bottom: 120px;
  flex-wrap: wrap;
}

.eat_list_item {
  font-size: 12px;
  color: #1f2d3d;
  display: flex;
  flex-direction: column;
  text-align: center;
  margin-bottom: 25px;
  margin-right: 25px;
}

.eat_list_item text {
  margin-top: 5px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  width: 60px;
}

.eat_list_img {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: #e0e6ed;
}

.list_box {
  width: 60px;
  height: 60px;
  position: relative;
}

.fixed_img {
  width: 16px;
  height: 16px;
  position: absolute;
  right: 0;
  z-index: 10;
}

.food_tag {
  background: red;
  font-size: 10px;
  color: #fff;
  font-weight: 600;
  line-height: 16px;
  padding: 0 5px;
  height: 16px;
  border-radius: 18px;
  position: absolute;
  z-index: 10;
  bottom: 0;
  right: 0;
}

.eat_list_item:nth-child(4n) {
  margin-right: 0;
}

.add_btn {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: #ede0e5;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add_btn image {
  width: 24px;
  height: 24px;
  background: rgba(255, 174, 186, 0);
}

.add_text {
  color: #f6616f;
}

/* 搜索框 */

.search-box {
  height: 84rpx;
  background: #fff;
  padding-top: 12rpx;
}

.search-input {
  background: #eff2f7;
  height: 72rpx;
  margin: 0 20rpx;
  border-radius: 8rpx;
  padding-left: 12%;
}

.search-box icon {
  position: absolute;
  margin: 18rpx 40rpx;
}

